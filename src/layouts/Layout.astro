---
import Navigation from "../components/Navigation";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation client:load />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* --accent: 136, 58, 234; */
		--accent: 255, 0, 0;
		/* --accent-light: 224, 204, 250; */
		--accent-light: 255, 125, 125;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: #13151a; */
		background: black;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.card {
		@apply px-5 py-8 rounded-2xl relative h-full border border-red-400 shadow-neon bg-red-700/25;
	}
	.card-date,
	.card-title {
		font-size: 2rem;
	}
	.card-title {
		@apply my-5 font-semibold;
	}
	.card-date {
		@apply backdrop-blur-sm rounded-full border border-red-400 px-5 py-2 absolute top-0 -translate-y-1/2 font-semibold shadow-neon;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
